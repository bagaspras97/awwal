generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

// NextAuth.js required tables
model Account {
  id                String  @id @default(cuid())
  userId            String
  type              String
  provider          String
  providerAccountId String
  refresh_token     String? @db.Text
  access_token      String? @db.Text
  expires_at        Int?
  token_type        String?
  scope             String?
  id_token          String? @db.Text
  session_state     String?

  user User @relation(fields: [userId], references: [id], onDelete: Cascade)

  @@unique([provider, providerAccountId])
}

model Session {
  id           String   @id @default(cuid())
  sessionToken String   @unique
  userId       String
  expires      DateTime
  user         User     @relation(fields: [userId], references: [id], onDelete: Cascade)
}

model User {
  id            String    @id @default(cuid())
  name          String?
  email         String?   @unique
  emailVerified DateTime?
  image         String?
  accounts      Account[]
  sessions      Session[]
  attendances   PrayerAttendance[]
  locations     UserLocation[]
  createdAt     DateTime  @default(now())
  updatedAt     DateTime  @updatedAt
}

model VerificationToken {
  identifier String
  token      String   @unique
  expires    DateTime

  @@unique([identifier, token])
}

// Awwal specific tables
model PrayerAttendance {
  id            String    @id @default(cuid())
  userId        String
  prayerName    String    // 'subuh', 'dzuhur', 'ashar', 'maghrib', 'isya'
  prayerDate    DateTime  @db.Date
  scheduledTime String    // HH:MM format
  attendedAt    DateTime?
  customTime    String?   // HH:MM format if user specified different time
  isEarly       Boolean?
  delayMinutes  Int?
  method        String    @default("simple") // 'simple', 'detailed'
  createdAt     DateTime  @default(now())
  updatedAt     DateTime  @updatedAt

  user User @relation(fields: [userId], references: [id], onDelete: Cascade)

  @@unique([userId, prayerName, prayerDate])
  @@index([userId, prayerDate])
}

model UserLocation {
  id        String   @id @default(cuid())
  userId    String
  latitude  Float
  longitude Float
  city      String?
  timezone  String?
  isActive  Boolean  @default(true)
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  user User @relation(fields: [userId], references: [id], onDelete: Cascade)

  @@index([userId])
}

model PrayerTimesCache {
  id          String   @id @default(cuid())
  latitude    Float
  longitude   Float
  date        DateTime @db.Date
  prayerTimes Json     // Store all 5 prayer times as JSON
  createdAt   DateTime @default(now())
  expiresAt   DateTime // Cache expiry

  @@unique([latitude, longitude, date])
  @@index([expiresAt])
}
